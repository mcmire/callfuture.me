
<h1>callfuture.me</h1>

<form action="/" method="post">
  <% if flash[:success] %>
    <div class="alert alert-success"><%= flash[:success] %></div>
  <% end %>
  <% if flash[:error] %>
    <div class="alert alert-error"><%= flash[:error] %></div>
  <% end %>
  <p>
    My phone number:
    <input type="tel" name="number">
    <button type="submit" class="btn">Call Me</button>
  </p>
</form>
